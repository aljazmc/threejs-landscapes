{
    "name": "threejs-landscapes",
    "version": "0.0.0",
    "author": "aljazmc",
    "license": "MIT",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/aljazmc/threejs-landscapes.git"
    },
    "packageManager": "yarn@4.12.0",
    "workspaces": [
        "packages/**"
    ],
    "dependencies": {
        "@aljazmc/ptuj": "workspace:*"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.14",
        "@types/jest": "^30.0.0",
        "esbuild": "0.27.3",
        "esbuild-register": "^3.6.0",
        "jest": "^30.2.0",
        "jest-esbuild": "^0.4.0",
        "typescript": "^5.9.3"
    },
    "resolutions": {
        "esbuild": "0.27.3"
    },
    "engines": {
        "node": ">=25.3.0",
        "npm": "Please use yarn instead of NPM to install dependencies",
        "pnpm": "Please use yarn instead of PNPM to install dependencies",
        "yarn": ">=4.12.0"
    },
    "scripts": {
        "build": "tsc -b",
        "lint": "biome check",
        "lint:w": "biome check --write",
        "ptuj:b": "esbuild packages/ptuj/src/index.{tsx,html,css} --loader:.html=copy --bundle --outdir=packages/ptuj/dist",
        "ptuj:s": "esbuild packages/ptuj/src/index.{tsx,html,css} --loader:.html=copy --bundle --outdir=packages/ptuj/dist --serve",
        "ptuj:w": "esbuild packages/ptuj/src/index.{tsx,html,css} --loader:.html=copy --bundle --outdir=packages/ptuj/dist --watch",
        "test": "jest",
        "test:watch": "jest --watchAll"
    }
}
